<div id="page-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">Product Listing</h1>
                            <form onsubmit="return searchBook()">
                                <div class="form-group input-group">
                                    <input type="text" class="form-control" placeholder="Search Here" id="nameBook" name="search" style="width:350px;height:45px;">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search"style="width:70px;height:29px;text-align: center;">Tìm Kiếm</i>
                                    </button>
                                </div>
                            </form>
                            </div>
                        </div>
                        <div class="col-lg-12"></div>
                            <div class="col-12 product-listing-products">
                                <div class="product-list row">
                                    {{#each books}}
                                        <div class="col-12 col-md-6 col-lg-4 manage-color-hover wow slideInUp" data-wow-delay=".2s">
                                            <div class="product-item owl-theme product-listing-carousel owl-carousel">
                                                <div class="item p-item-img">
                                                    <img src="book-shop\img\book-1.jpg" alt="images" style="width:350px;height:400px;">
                                                </div>
                                            </div>
                                            <div class="p-item-detail">
                                                <h4 class="text-center p-item-name"><a href="/productDetail/{{id}}">{{name}}</a></h4>
                                                <p class="text-center p-item-price">{{price}}</p>
                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                                    <nav aria-label="Page navigation example"style="position:center;text-align: center;">
                                        <ul class="pagination float-right mb-2">
                                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                            <li class="page-item"><a class="page-link" href="/productList/?page=0">0</a></li>
                                            <li class="page-item"><a class="page-link" href="/productList/?page=1">1</a></li>
                                            <li class="page-item"><a class="page-link" href="/productList/?page=2">2</a></li>
                                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                        </ul>
                                    </nav> 
                                </div>
                            </div>
                        </div>    
                    </div>
                </div>
        <!-- /#wrapper -->

        <!-- jQuery -->
        <script src="../js/jquery.min.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="../js/bootstrap.min.js"></script>

        <!-- Metis Menu Plugin JavaScript -->
        <script src="../js/metisMenu.min.js"></script>

        <!-- DataTables JavaScript -->
        <script src="../js/dataTables/jquery.dataTables.min.js"></script>
        <script src="../js/dataTables/dataTables.bootstrap.min.js"></script>
        <!-- Custom Theme JavaScript -->
        <script src="../js/startmin.js"></script>

        <!-- Page-Level Demo Scripts - Tables - Use for reference -->
        <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable({
                        responsive: true
                });
            });
        </script>
